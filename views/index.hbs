{{>header}}
{{>navbar}}
{{#if message}}
<div class="alert alert-{{message.type}}" role="alert" id="alert">
    <div class="container">{{message.message}}</div>
</div>
{{/if}}

<div class="container mt-3">
    <form>

        <div class="row g-2">
            {{#each heroes}}
            <div class="col-3">
                <div class="p-3 border bg-secondary text-white text-center">
                    <img src="/uploads/{{this.photos}}" class="img-fluid">
                    {{!-- <img src="/uploads/{{this.photos}}" class="img-fluid"> --}}
                    <div class="title mt-1"> {{this.name}}</div>
                    <div class="type mt-1"> {{this.type}} - {{this.id}}</div>
                    <button type="submit" formaction="/heroes/{{this.id}}"
                        class="btn btn-danger w-100 mt-1">Detail</button>
                </div>
            </div>
            {{/each}}
        </div>
    </form>
</div>
{{>footer}}