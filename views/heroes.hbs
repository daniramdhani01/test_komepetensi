{{>header}}
{{>navbar}}
{{#if message}}
<div class="alert alert-{{message.type}}" role="alert" id="alert">
    <div class="container">{{message.message}}</div>
</div>
{{/if}}

<div class="container">

    <div class="row my-3 border border-secondary">
        <div class="col-12 bg-secondary">
            <h3 class="text-center fw-bolder">{{heroes.name}}</h3>
        </div>
        {{!--
    </div> --}}

    <div class="row mt-3">
        <div class="col-4">
            <img src="/uploads/{{heroes.photos}}" class="w-100">
        </div>
        <div class="col-8">
            <div class="d-flex justify-content-center">
                <form>
                    <button type="submit" class="btn btn-warning fw-bolder mx-2"
                        formaction="/edit-heroes/{{heroes.id}}">Edit</button>
                    <button type="submit" class="btn btn-danger fw-bolder mx-2"
                        formaction="/delete-heroes/{{heroes.id}}">Delete</button>
                </form>
            </div>
            <table class="table my-3 text-white">
                <tr>
                    <td>Type</td>
                    <td>{{heroes.type_name}}</td>
                </tr>
                <tr>
                    <td>Agility</td>
                    <td>{{heroes.agility}}</td>
                </tr>
                <tr>
                    <td>Power</td>
                    <td>{{heroes.power}}</td>
                </tr>
                <tr>
                    <td>Stamina</td>
                    <td>{{heroes.stamina}}</td>
                </tr>
                <tr>
                    <td>Unique Skill</td>
                    <td>{{heroes.unique_skill}}</td>
                </tr>
                <tr>
                    <td>Weakness</td>
                    <td>{{heroes.weakness}}</td>
                </tr>
                <tr>
                    <td>Description</td>
                    <td>{{heroes.description}}</td>
                </tr>
            </table>
        </div>
    </div>
</div>

</div>
{{>footer}}